{
    "name": "scrum-tools-server",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "start": "node index.js",
        "dev": "nodemon index.js",
        "db:migrate:create": "node-pg-migrate create --migration-file-language js",
        "db:migrate:up": "node-pg-migrate up",
        "db:migrate:down": "node-pg-migrate down",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.11.3",
        "socket.io": "^4.7.2",
        "uuid": "^11.1.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.4",
        "@types/pg": "^8.10.3",
        "jest": "^29.7.0",
        "node-pg-migrate": "^7.9.1",
        "nodemon": "^3.0.1",
        "socket.io-client": "^4.8.1",
        "supertest": "^7.1.0"
    }
}
